{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "variables": {
    "TELEGRAM_TOKEN": {
      "description": "The API Token from @BotFather",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "Your OpenAI API Key",
      "required": true
    },
    "SUPABASE_URL": {
      "description": "Your Supabase Project URL",
      "required": true
    },
    "SUPABASE_KEY": {
      "description": "Your Supabase Service Key",
      "required": true
    },
    "GOOGLE_TOKEN_JSON": {
      "description": "Paste the content of token.json here",
      "required": true
    },
    "GOOGLE_CREDENTIALS_JSON": {
      "description": "Paste the content of credentials.json here",
      "required": true
    },
    "BOT_NAME": {
      "description": "Bot Name",
      "defaultValue": "Gestella",
      "required": false
    },
    "USER_LOCATION": {
      "description": "User Location",
      "defaultValue": "Singapore (GMT+8)",
      "required": false
    },
    "USER_NAME": {
      "description": "User Name",
      "defaultValue": "Sir",
      "required": false
    }
  }
}
